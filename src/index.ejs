<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title><%= seo.title  %></title>
  <meta name="description" content="<%= seo.description %>">
  <meta name="keywords" content="<%= seo.keywords.join(',') %>">
  <link rel="stylesheet" href="./css/app.css">
</head>
<body>
  <div class="site-wrapper">
    <header class="site-header">
      <section class="title">
        <span class="main">滕运锋-前端开发</span>
        <span class="sub">--- 三年开发经验，外包勿扰</span>
      </section>
      <section class="intention"><%= sections.intention %></section>
    </header>
    <article class="site-content">
      <section class="site-section">
        <header class="site-section-header">基本信息</header>
        <article class="site-section-content">
          <ul class="profile-box">
            <% sections.profile.forEach((item) => { %>
              <li class="item <%= item.widthPercentage %>"><%- item.text %></li>
            <% }); %>
          </ul>
        </article>
      </section>

      <section class="site-section">
        <header class="site-section-header">技能描述</header>
        <article class="site-section-content">
          <ul class="skill-box">
            <% sections.skills.forEach((item) => { %>
              <li class="item"><%= item.join('') %></li>
            <% }); %>
          </ul>
        </article>
      </section>

      <section class="site-section">
        <header class="site-section-header">项目经验</header>
        <article class="site-section-content">
          <ul class="project-box">
            <% sections.projects.forEach((item) => { %>
              <li class="item">
                <header class="project-header"><%= item.title %></header>

                <article class="project-content">
                  <p class="paragraph">标签：<%= item.tags.join('、') %></p>
                  <p class="paragraph">技术栈：<%= item.skills.join('、') %></p>
                  <% item.description.forEach((paragraph) => { %>
                    <p class="paragraph"><%- paragraph %></p>
                  <% }); %>
                </article>
              </li>
            <% }); %>
          </ul>
        </article>
      </section>

      <section class="site-section">
        <header class="site-section-header">工作经验</header>
        <article class="site-section-content">
          <ul class="job-box">
            <% sections.jobs.forEach((item) => { %>
              <li class="item"><%= item %></li>
            <% }); %>
          </ul>
        </article>
      </section>
    </article>
  </div>
  <script src="./js/app.js"></script>
</body>
</html>
